---
export const prerender = false;

import Layout from "../layouts/Layout.astro";
import {actions} from "astro:actions";

if (!Astro.cookies.has('user_token'))
    return Astro.redirect('/login');

const token = Astro.cookies.get('user_token').value;

let resultText = "";
if (Astro.request.method === "POST") {
    const formData = await Astro.request.formData();
    formData.append('token', token);
    const { error } = await Astro.callAction(actions.changePassword, formData);

    if (!error) {
        Astro.cookies.delete('user_token');
        return Astro.redirect('/password-success');
    } else
        resultText = `Unable to change password: ${error.message}`;
}
---
<Layout title="Change email">
    <main>
        <h2>Change password</h2>
        <form method="POST">
            <div class="form-text">
                <label>
                    Current password:
                    <input required type="password" name="current_password" placeholder="Enter your current password">
                </label>
                <label>
                    New password:
                    <input required type="password" name="new_password" placeholder="Enter your new password">
                </label>
            </div>
            <input type="submit" value="Change">
        </form>
        <p>{resultText}</p>
    </main>
    <style>
        main {
            display: grid;
            grid-template-rows: repeat(2, auto) 1rem;
            place-self: start center;
            padding: 1rem 15rem 2rem 15rem;
        }

        h2 {
            text-align: center;
        }

        form {
            display: grid;
            gap: 0.5rem;
            place-self: start center;
        }

        input {
            padding: 0.3rem;
            border-radius: 0.2rem;
            font-size: 0.9em;
        }

        input[type="submit"] {
            padding: 0.2em;
            place-self: center;
        }

        label {
            display: flex;
            flex-direction: column;
            gap: 0.3rem;
        }

        p {
            text-align: center;
        }

        .form-text {
            display: grid;
            gap: 1rem;
        }

        @media (max-width: 1380px) {
            main {
                padding: 1rem 2rem 2rem 2rem;
            }
        }
    </style>
</Layout>