---
export const prerender = false;

import Layout from "../layouts/Layout.astro";
import {actions} from "astro:actions";

if (!Astro.cookies.has('user_token'))
    return Astro.redirect('/login');

const token = Astro.cookies.get('user_token').value;
const backendName = import.meta.env.PUBLIC_BACKEND_NAME;

let data;
try {
    const response = await fetch(`https://${backendName}/_r2m/user`, {
        headers: {
            Authorization: `Bearer ${token}`
        }
    });

    data = await response.json();
} catch (error) {
    return Astro.redirect('/login');
}
---
<Layout title="User page">
    <main>
        <h2>Account information</h2>
        <p>Display name:</p>
        <p>Email:</p>
        <div class="buttons">
            <a href="/change-email"><button>Change my email</button></a>
            <a href="/change-password"><button>Change my password</button></a>
        </div>
        <h2 class="danger">Danger zone</h2>
        <div class="buttons">
            <a href="/delete-account"><button class="danger">Delete my account</button></a>
        </div>
    </main>
    <style>
        main {
            place-self: start center;
            padding: 1rem 15rem 2rem 15rem;
        }

        h2 {
            text-align: center;
        }

        a {
            display: block;
        }

        button {
            padding: 0.3em;
            font-size: 0.85em;
            width: 70%;
        }

        .buttons {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
            text-align: center;
        }

        .danger {
            color: #ff2f2f;
            font-weight: bold;
        }

        @media (max-width: 1380px) {
            main {
                padding: 1rem 2rem 2rem 2rem;
            }
        }
    </style>
</Layout>